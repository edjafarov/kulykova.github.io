common_bkg = #CFFAFC
blue = #1ba1e2
magenta = #a200ff
purple = #ff0097
teal = #00aba9
lime = #9cbf26
brown = #a05000
pink = #e671b8
orange = #f09609
red = #e51400
green = #339933

btn_height = 77px

.avatar {
  padding 0

  img {
    width 244px
  }
}

body{
  background-color common_bkg
}

#main-nav{
  ul{
    list-style-type none
  }
  li{
    height btn_height
    line-height btn_height
    background-color blue
    text-align center
    border 1px solid common_bkg
    font-size 1.2em
    a{
      color #ffffff
      display inline-block
      width 100%
      height btn-height
    }
  }
  li + li{
    background-color green
  }
  li + li+ li{
    background-color red
  }
  li + li+ li+ li{
    background-color teal
  }
  li + li+ li+ li+ li{
    background-color brown
  }
  li + li+ li+ li+ li+ li{
    background-color orange
  }
  li + li+ li+ li+ li+ li+ li{
    background-color purple
  }
  li + li+ li+ li+ li+ li+ li+ li{
    background-color pink
  }
  li + li+ li+ li+ li+ li+ li+ li + li{
    background-color lime
  }


}

article, aside {
  margin-top 30px
  text-align justify
}

article {
  padding-right 20px
  line-height 1.5em
  font-size 1.3em
}

.addthis {
  font-size 1em
}

